  "bugs": {
    "url": "https://github.com/Shuunen/stuff-finder/issues"
  },
  "homepage": "https://github.com/Shuunen/stuff-finder#readme",
  "devDependencies": {
    "eslint": "^5.14.1",
    "eslint-plugin-typescript": "^0.14.0",
    "http-server": "^0.11.1",
    "sass": "^1.17.0",
    "standard": "^12.0.1",
    "typescript-eslint-parser": "^22.0.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  }
