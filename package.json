{
  "$schema": "https://json.schemastore.org/package",
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/stuff-finder/issues",
  "description": "Sorting things is pointless if you can't find them afterwards",
  "devDependencies": {
    "@angular-eslint/template-parser": "14",
    "@camwiegert/typical": "0.1",
    "@tailwindcss/forms": "0.5",
    "@types/dom-speech-recognition": "0",
    "@types/node": "18",
    "@typescript-eslint/eslint-plugin": "5",
    "@typescript-eslint/parser": "5",
    "@zxing/library": "0.19",
    "autoprefixer": "10",
    "c8": "7",
    "esbuild": "0.15",
    "eslint": "8.26",
    "eslint-plugin-html": "7",
    "eslint-plugin-tailwindcss": "3",
    "eslint-plugin-unicorn": "44",
    "fuse.js": "6.6",
    "jsdom": "20",
    "jsdom-global": "3",
    "npm-parallel": "2",
    "postcss": "8",
    "repo-check": "1.28",
    "servor": "4",
    "shuutils": "6.3",
    "tailwindcss": "3",
    "tsm": "2",
    "typescript": "4",
    "uvu": "0",
    "watchlist": "0",
    "webcomponent-qr-code": "1.0"
  },
  "files": [
    "src"
  ],
  "homepage": "https://github.com/Shuunen/stuff-finder",
  "keywords": [
    "webapp",
    "stuff",
    "finder"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/stuff-finder",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/stuff-finder.git"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:js -- --minify",
    "build:css": "tailwindcss -i src/assets/styles.css -o src/assets/styles.min.css --minify",
    "build:js": "esbuild src/index.ts --outdir=public --bundle",
    "check": "repo-check",
    "ci": "npm run build && npm run lint && npm run check && npm run test",
    "dev": "parallel dev:css dev:js serve",
    "dev:css": "npm run build:css -- --watch",
    "dev:js": "npm run build:js -- --watch",
    "lint": "tsc --noEmit && eslint --fix --ignore-path .gitignore --ext .js,.ts,.html .",
    "mark": "unique-mark public/index.html",
    "postversion": "git push && git push --tags",
    "preversion": "npm run ci",
    "serve": "servor public --reload --browse",
    "start": "npm run dev",
    "test": "c8 uvu -r tsm -r jsdom-global/register tests",
    "test:watch": "watchlist src tests -eager -- npm test"
  },
  "version": "0.3.0"
}
