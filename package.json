{
  "name": "stuff-finder",
  "version": "1.0.0",
  "description": "Sorting things is pointless if you can't find them afterwards",
  "main": "index.js",
  "dependencies": {
    "parcel-bundler": "^1.11.0",
    "typescript": "~3.2.1"
