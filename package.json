{
  "$schema": "https://json.schemastore.org/package",
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/stuff-finder/issues",
  "dependencies": {
    "@camwiegert/typical": "0.1",
    "@zxing/library": "0.20",
    "fuse.js": "6.6",
    "shuutils": "7.3",
    "webcomponent-qr-code": "1.1"
  },
  "description": "Sorting things is pointless if you can't find them afterwards",
  "devDependencies": {
    "@tailwindcss/forms": "0.5",
    "@types/dom-speech-recognition": "0",
    "@types/node": "18",
    "@vitest/coverage-v8": "0.32",
    "autoprefixer": "10",
    "dependency-cruiser": "latest",
    "esbuild": "0.18",
    "eslint": "8.43",
    "eslint-config-hardcore": "38",
    "eslint-plugin-tailwindcss": "3",
    "eslint-plugin-unicorn": "47",
    "npm-parallel": "2",
    "postcss": "8",
    "repo-check": "1.31",
    "servor": "4",
    "tailwindcss": "3",
    "typescript": "5.1",
    "vitest": "0.32",
    "watchlist": "0"
  },
  "files": [
    "src"
  ],
  "homepage": "https://github.com/Shuunen/stuff-finder",
  "keywords": [
    "webapp",
    "stuff",
    "finder"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/stuff-finder",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/stuff-finder.git"
  },
  "scripts": {
    "build": "pnpm build:css && pnpm build:js --minify && echo build success",
    "build:css": "tailwindcss -i src/assets/styles.css -o src/assets/styles.min.css --minify",
    "build:js": "esbuild src/index.ts --target=esnext --outdir=public --bundle",
    "check": "repo-check && pnpm build && pnpm lint && pnpm test && echo check success",
    "dev": "parallel dev:css dev:js serve",
    "dev:css": "pnpm build:css --watch",
    "dev:js": "pnpm build:js --watch",
    "lint": "tsc --noEmit && eslint --cache --fix --ext .js,.ts,.html . && depcruise src --config && echo lint success",
    "lint:watch": "watchlist src tests -eager -- pnpm lint",
    "mark": "unique-mark public/index.html && echo mark success",
    "postversion": "git push && git push --tags",
    "preversion": "pnpm check",
    "serve": "servor public --reload",
    "start": "pnpm dev",
    "test": "pnpm test:watch --run && echo test success",
    "test:watch": "vitest --coverage"
  },
  "version": "0.5.0"
}
