{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/stuff-finder/issues",
  "description": "Sorting things is pointless if you can't find them afterwards",
  "devDependencies": {
    "@camwiegert/typical": "^0.1",
    "@tailwindcss/forms": "^0.4",
    "@types/node": "16",
    "@typescript-eslint/eslint-plugin": "5",
    "@typescript-eslint/parser": "5",
    "@zxing/library": "^0.18",
    "autoprefixer": "10",
    "c8": "7",
    "esbuild": "^0.14",
    "eslint": "8",
    "eslint-plugin-html": "6",
    "eslint-plugin-unicorn": "39",
    "fuse.js": "^6.4",
    "jsdom": "19",
    "jsdom-global": "3",
    "npm-run-all": "4",
    "postcss": "8",
    "repo-check": "^1.21",
    "servor": "4",
    "shuutils": "^5.3",
    "tailwindcss": "3",
    "tsm": "2",
    "typescript": "4",
    "uvu": "0",
    "watchlist": "0",
    "webcomponent-qr-code": "^1.0"
  },
  "files": [
    "src"
  ],
  "homepage": "https://github.com/Shuunen/stuff-finder",
  "keywords": [
    "webapp",
    "stuff",
    "finder"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/stuff-finder",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/stuff-finder.git"
  },
  "scripts": {
    "build": "run-s build:css \"build:js -- --minify\"",
    "build:css": "tailwindcss -i src/assets/styles.css -o src/assets/styles.min.css --minify",
    "build:js": "esbuild src/index.ts --outdir=public --bundle --target=es2020 --define:global=window",
    "check": "repo-check",
    "ci": "run-s build lint check test",
    "dev": "run-p dev:* serve",
    "dev:css": "npm run build:css -- --watch",
    "dev:js": "npm run build:js -- --watch",
    "lint": "tsc --noEmit && eslint --fix --ignore-path .gitignore --ext .js,.ts,.html .",
    "mark": "node bin/mark",
    "postversion": "git push && git push --tags",
    "preversion": "npm run ci",
    "serve": "servor public --reload --browse",
    "start": "npm run dev",
    "test": "uvu -r tsm -r jsdom-global/register tests",
    "test:watch": "watchlist src tests -- npm test"
  },
  "version": "0.2.0"
}
